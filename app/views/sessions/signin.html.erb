<%= render 'layouts/scripts' %>

<body>
  <%= render partial: "layouts/navbar", locals: {tab: nil} %>

  <div class="container">
    <form action="/signin" class="signIn form-signin" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="calasa">
        <%= image_tag("calasa.jpg", class: "calasaIMG")%>
      </div>
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %> alert-dismissible" role="alert">
          <%= value %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %>
      
      <div class="form-floating mb-4">
        <input class="form-control" id="inputEmail" type="text" placeholder="Email" aria-label="Email"
          name="login[email]">
        <label for="inputEmail">Email</label>
      </div>

      <div class="form-floating mb-3">
        <input class="form-control" id="inputPassword" type="password" placeholder="Password" aria-label="Password"
          name="login[password]">
        <label for="inputPassword">Password</label>
      </div>

      <button class="w-100 btn btn-lg btn-danger antihover" id="logInButton" type="submit">Sign In</button>
    </form>
  </div>

  <%= render 'layouts/footer' %>
</body>
